	<source>
		<name>geo_raw_dir</name>
		<type>list_dir</type>
	    <arguments>/user/larsab/troilkatt/data/geo/raw/sco</arguments>
	    <output-directory></output-directory>
	    <compression-format></compression-format>
	    <storage-time>-1</storage-time>	    
	    <description>Read in files from the platform specific GEO raw HDFS directory.</description>    
	</source> 
<!--
<source>
		<name>geo_ftp</name>
		<type>geo_raw_mirror</type>
	    <arguments>/home/larsab/troilkatt/mas5/pcl_lists/sco_pcl_test.txt</arguments>	    
	    <output-directory>geo/raw/sco</output-directory>
	    <compression-format>none</compression-format>
	    <storage-time>-1</storage-time>	    
	    <description>Download RAW files from the GEO FTP server that match the specified organism.</description>    
	</source>

-->
	<pipeline>	
	    <stage>
			<name>remove_overlapping</name>
			<type>mapreduce</type>
			<arguments>TROILKATT.JAR edu.princeton.function.troilkatt.mapreduce.BatchRawRemoveOverlapping</arguments>
			<output-directory>imp/raw/sco/rmo</output-directory>
			<compression-format>none</compression-format>
			<storage-time>-1</storage-time>
			<description>Remove overlapping samples and split RAW file into platform specific parts.</description>						
		</stage>
		<stage>
			<name>cel2pcl</name>
			<type>mapreduce_stage</type>
			<arguments>script_per_file /usr/bin/python TROILKATT.SCRIPTS/cel2pclAffy.py TROILKATT.BIN/R TROILKATT.SCRIPTS/R/ProcessScoAffyCEL.R > TROILKATT.LOG_DIR/cel2pcl.output 2> TROILKATT.LOG_DIR/cel2pcl.error</arguments>
			<output-directory>imp/raw/sco/pcl</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>-1</storage-time>
			<description>Convert cel files to PCL format.</description>						
		</stage>
		<stage>
			<name>missing_values</name>			
			<type>mapreduce</type>
			<arguments>TROILKATT.JAR edu.princeton.function.troilkatt.mapreduce.BatchPclMissingValues 50 3 50 0 0</arguments>
			<output-directory>imp/raw/sco/mv</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>14</storage-time>			
			<description>Fill in missing values and set some values that are better characterized as missing.</description>						
		</stage>
		<stage>
			<name>knnimpute</name>
			<type>mapreduce_stage</type>
			<arguments>execute_per_file TROILKATT.BIN/KNNImputer -i TROILKATT.INPUT_DIR/TROILKATT.FILE -o TROILKATT.OUTPUT_DIR/TROILKATT.FILE.knn -k 10 -m 0.7 -d euclidean > TROILKATT.LOG_DIR/KNNImputer.out 2> TROILKATT.LOG_DIR/KNNImputer.error</arguments>
			<output-directory>imp/raw/sco/knn</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>14</storage-time>		
			<description>Fill in missing values with their most likely values.</description>
		</stage>
		<stage>
			<name>map_genes</name>
			<type>mapreduce</type>
			<arguments>TROILKATT.JAR edu.princeton.function.troilkatt.mapreduce.BatchPclMapGeneNames TROILKATT.GLOBALMETA_DIR/genes/imp/sco.map</arguments>
			<output-directory>imp/raw/sco/map</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>14</storage-time>			
			<description>Translate all gene names to a common standard</description>
		</stage>				
		<stage>
			<name>average_duplicates</name>
			<type>mapreduce</type>
			<arguments>TROILKATT.JAR edu.princeton.function.troilkatt.mapreduce.BatchPclMeanGenesThatAgree 0</arguments>
			<output-directory>imp/raw/sco/avg</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>14</storage-time>					
			<description>Average together duplicate genes</description>
		</stage>
	<stage>
			<name>pcl2qdab</name>
			<type>mapreduce_stage</type>
			<arguments>execute_per_file /usr/bin/python TROILKATT.SCRIPTS/pcl2qdab.py TROILKATT.BIN TROILKATT.INPUT_DIR/TROILKATT.FILE TROILKATT.TMP_DIR/TROILKATT.FILE_NOEXT.dat TROILKATT.OUTPUT_DIR/TROILKATT.FILE_NOEXT.qdab TROILKATT.GLOBALMETA_DIR/imp/GSE.quant > TROILKATT.LOG_DIR/TROILKATT.FILE.output 2> TROILKATT.LOG_DIR/TROILKATT.FILE.error</arguments>
			<output-directory>imp/raw/sco/qdab</output-directory>
			<compression-format>bz2</compression-format>
			<storage-time>-1</storage-time>	
			<description>Do distance calculation and convert .dat files to .dab files</description>
		</stage>     
<!--
		<stage>
			<name>pcl2dab</name>
			<type>mapreduce_stage</type>
			<arguments>execute_per_file /usr/bin/python TROILKATT.SCRIPTS/pcl2dab.py TROILKATT.BIN TROILKATT.INPUT_DIR/TROILKATT.FILE TROILKATT.TMP_DIR/TROILKATT.FILE_NOEXT.dat TROILKATT.OUTPUT_DIR/TROILKATT.FILE_NOEXT.dab > TROILKATT.LOG_DIR/TROILKATT.FILE.output 2> TROILKATT.LOG_DIR/TROILKATT.FILE.error</arguments>
